{deps,
 [{minirest, {git, "https://github.com/emqx/minirest", {tag, "v0.2.3"}}},
  {sqlparse, {git, "https://github.com/emqx/sqlparse", {tag, "4.6.4"}}}
 ]}.

{edoc_opts, [{preprocess, true}]}.
{erl_opts, [warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            warn_obsolete_guard,
            debug_info,
            {parse_transform}]}.

{plugins, [rebar3_proper]}.

{profiles,
 [{test,
   [{deps,
     [{emqx_ct_helpers, {git, "https://github.com/emqx/emqx-ct-helpers", {branch, "v1.1.1"}}},
      {emqtt, {git, "https://github.com/emqx/emqtt", {tag, "v1.0.1"}}}
     ]}
   ]}
 ]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               warnings_as_errors, deprecated_functions]}.
{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.
